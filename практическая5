using namespace std;

int gcd(int a, int b){
    if (a == 0){
        return b;
    }
    else if (b == 0){
        return a;
    }
    else if (a > b){
        return gcd(a%b, b);
    }
    else{
        return gcd(a, b%a);
    }
}

void dz1(){
    int a, b;
    cout << "введите два числа через пробел: " << endl;
    cin >> a >> b;
    cout << "ответ: " << gcd(a, b);

}
void resheto(int a){
    bool *arr = new bool[a];

    for(int i = 0; i < a; i++) {
        if (i > 1){
            arr[i] = true;
        }

    }
    for(int i = 2; i < a; i++){
        if (i){
            for(int j = i+1; j < a;j++){
                if (j%i == 0){
                    arr[j] = false;
                }
            }
        }
    }
    for(int i = 0; i < a; i++){
        if (arr[i]){
            cout << i << endl;
        }
    }
}
void dz2(){
    int a;
    cout << "введите число: ";
    cin >> a;
    cout << "простые числа от 2 до " << a << endl;
    resheto(a + 1);

}
void dz3_1(){
    ifstream file;
    file.open("/home/nikita/Projects/Procedurka/practise_5_dz_3.txt");
    string s;
    getline(file, s);
    for(int i = 0; i < s.size();i++){
        if (s[i] == ' ') {
            s[i] = '&';
        }
    }
    file.close();
    ofstream new_file;
    new_file.open("/home/nikita/Projects/Procedurka/practise_5_dz_3.txt");
    new_file << s;
    new_file.close();

}

void dz3_19(){
    ifstream file;
    file.open("/home/nikita/Projects/Procedurka/practise_5_dz_3.txt");
    string s;
    getline(file, s);
    int counter[256];
    for(int i = 0; i < 256;i++){
        counter[i] = 0;
    }
    for(int i = 0; i < s.size(); i++){
        int t = (int)s[i];
        counter[t]++;
    }
    int mx = -1000;
    int ind_mx = 0;
    for(int i = 0; i < 256;i++){
        if (counter[i] > mx){
            mx = counter[i];
            ind_mx = i;
        }
    }
    cout << "наиболее часто встречающийся символ в файле: " << (char)ind_mx << endl;
}
void dz4_1(){
    cout << "введите число n: ";
    int n;
    cin >> n;
    double sum = 0;
    double znam = 0;
    for(int i = 1; i < (n+1); i++){
        znam += sin(i);
        sum += (i/znam);
    }
    cout << "Ответ: " << sum << endl;
}
void dz4_8(){
    int a, n;
    cout << "Введите числa n и a через пробел: " << endl;
    cin >> n >> a;
    double sum = 0;
    double znam = a;
    for(int i = 1; i < n+2; i++){
        sum += (i/znam);
        znam *= (a+i);
    }
    cout << "Ответ: " << sum << endl;


}
