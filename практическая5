    getline(file, s);
    for(int i = 0; i < s.size();i++){
        if (s[i] == ' ') {
            s[i] = '&';
        }
    }
    file.close();
    ofstream new_file;
    new_file.open("/home/nikita/Projects/Procedurka/practise_5_dz_3.txt");
    new_file << s;
    new_file.close();

}
