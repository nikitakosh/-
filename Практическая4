void dz9() {
    cout << "введите число и основание системы счисления через пробел: ";
    int num, p;
    cin >> num >> p;
    cout << "введите основание системы счисления, в которое хотите перевести своё число: ";
    int z;
    cin >> z;
    string ans;
    // переводим в десятичную
    string num_str = to_string(num);
    int dnum = 0;
    for(int i = 0; i < num_str.size(); i++){
        int n = num_str[i] - '0';
        dnum += pow(p, num_str.size()-1-i) * n;
    }
    while (dnum > 0){
        ans = to_string(dnum%z) + ans;
        dnum = dnum / z;
    }
    cout << "ответ: " << ans << endl;

}

