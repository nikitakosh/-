void dz1() {
    ofstream file;
    file.open("/home/nikita/Projects/Procedurka/practise_4_dz_1.txt");
    cout << "введите через пробел 10 чисел: ";
    double nums[10];
    for(int i = 0; i < 10; i++){
        cin >> nums[i];
    }
    for (int i = 0; i < 10; i++){
        file << nums[i] << endl;
    }
    file.close();
    ifstream file_new;
    file_new.open("/home/nikita/Projects/Procedurka/practise_4_dz_1.txt");
    double sum = 0;
    for(int i = 0; i < 10; i++){
        double n;
        file_new >> n;
        sum += n;
    }
    file_new.close();
    cout << sum << endl;

}
int sign_x(double x){
    if (x > 0) {
        return 1;
    }
    else if (x == 0) {
        return 0;
    }
    else {
        return -1;
    }
}
void dz2() {
    double x;
    cout << "введите число: ";
    cin >> x;
    cout << sign_x(x) << endl;
}
double square_of_rectangle(double a, double b){
    return a * b;
}
double square_of_trigon(double h, double c) {
    return 0.5 * h * c;
}
double square_of_circle(double r){
    return 3.14 * r * r;
}
void dz3() {
    cout << "вычисление площади прямоугольника, введите длину и ширину через пробел: ";
    double a, b;
    cin >> a >> b;
    cout << "площадь треугольника равна " << square_of_rectangle(a, b) << endl;
    cout << "вычисление площади треугольника, введите высоту и основание треугольника: ";
    double h, c;
    cin >> h >> c;
    cout << "площадь треугольника равна " << square_of_trigon(h, c) << endl;
    cout << "вычисление площади круга, введите радиус: ";
    double r;
    cin >> r;
    cout << "площадь круга равна " << square_of_circle(r) << endl;
}

void dz6() {
    string s;
    cout << "введите римскую запись числа: ";
    cin >> s;
    int num = 0;
    for(int i = 0; i < s.size(); i++) {
        if (s[i] == 'I') {
            num += 1;
        }
        else if (s[i] == 'V') {
            num += 5;
        }
        else if (s[i] == 'X') {
            num += 10;
        }
        else if (s[i] == 'L') {
            num += 50;
        }
        else if (s[i] == 'C') {
            num += 100;
        }
        else if (s[i] == 'D') {
            num += 500;
        }
        else if (s[i] == 'M') {
            num += 1000;
        }
    }
    cout << num << endl;
}
void dz4() {
    for (int i = 0; i < 13;i++) {
        for(int j = 0; j < 50; j++) {
            if (i < 4 and j < 12) {
                cout << '*';
            }
            else {
                cout << "-";
            }
            if (j == 49){
                cout << "\n";
            }
        }
    }
}
void dz5() {
    const double pi = acos(-1);
    char scene[101][101];
    for(int y = 0; y < 101;y++){
        for(int x = 0; x < 101;x++){
            if (y == 50){
                scene[x][y] = '-';
            }
            else if (x == 50) {
                scene[x][y] = '-';
            }
            else{
                scene[x][y] = '0';
            }
        }
    }
    for(int y = 0; y < 101; y++) {
        for (int x = 0; x < 101; x++) {
            double cord_x = x * (pi/6);
            double cord_y = y * 0.5;
            if (cord_y == floor(sin(cord_x))) {
                scene[x][y] = '*';
            }

        }
    }
    for(int i = 0; i< 101; i++) {
        for(int j = 0;j < 101; j++) {
            if (j != 100){
                cout << scene[i][j];
            }
            else {
                cout << scene[i][j] << endl;
            }
        }
    }

}
