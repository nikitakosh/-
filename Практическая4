void rim() {
    string str;
    cout << "введите число: " << endl;
    cin >> str;
    smatch result;
    regex regular("^M?M?M?(CM|CD|D?C?C?C?)(XC|XL|L?X?X?X?)(IX|IV|V?I?I?I?)$");
    int nums[str.size()];
    for(int i = 0; i < str.size(); i++){
        if (str[i] == 'I'){
            nums[i] = 1;
        }
        else if (str[i] == 'V'){
            nums[i] = 5;
        }
        else if (str[i] == 'X'){
            nums[i] = 10;
        }
        else if (str[i] == 'L'){
            nums[i] = 50;
        }
        else if (str[i] == 'C'){
            nums[i] = 100;
        }
        else if (str[i] == 'D'){
            nums[i] = 500;
        }
        else if (str[i] == 'M'){
            nums[i] = 1000;
        }
    }
    int sum = 0;
    if (regex_match(str, result, regular)){
        for(int i = 0; i < str.size(); i++){
            if (i != str.size()-1){
                if (nums[i] < nums[i+1]){
                    sum -= nums[i];
                }
                else if (nums[i] == nums[i+1]){
                    sum += nums[i];
                }
                else if (nums[i] > nums[i+1]){
                    sum += nums[i];
                }
            }
            else{
                sum += nums[i];
            }


        }
        cout << "сумма равна " << sum << endl;
    }
    else{
        cout << "число введено не верно" << endl;
    }


}
int randint(int i){
    int m, b, c;
    m, b, c = 37, 3, 64;
    if (i == 0) {
        return 0;
    }
    else{
        return ((m*randint(i-1) + b))%c;
    }

}
