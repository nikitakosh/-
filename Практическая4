    cin >> i;
    cout << randint(i) << endl;



}

void dz8() {
    double A[3][4] = {{5, 2, 0, 10},
                   {3, 5, 2, 5},
                   {20, 0, 0, 0},
                    };
    double B[4][2] = {
            {1.20, 0.50},
            {2.80, 0.40},
            {5.00, 1.00},
            {2.00, 1.50},
    };
    double C[3][2];
    for(int i = 0; i < 3; i++){
        for(int k = 0; k < 2; k++){
            double sum = 0;
            for(int j = 0; j < 4; j++) {
                sum += A[i][j]*B[j][k];
            }
            C[i][k] = sum;

        }
    }
    for(int i = 0; i < 3; i++){
        for(int j = 0; j < 2; j++) {
            cout << C[i][j] << " ";
        }
        cout << "\n";
    }
}

void sinus(){
    int width = 50;
    int height = 20;
    double error = 0.05;
    double PI = acos(-1.0);

    for(int i = 0; i < height; i++){
        for (int j = 0; j < width; j++){
            double x = 4 * PI * (j - (width/2.0)) / width;
            double y = (i - (height/2.0)) / (height/2.0);
            double s = sin(x);
            if (y >= s - error and y <= s + error) {
                cout << '*';
            }
            else{
                cout <<  ' ';
            }
        }
        cout << '\n';
    }
}

